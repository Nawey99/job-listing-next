{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "isolatedModules": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    // be sure to include "cypress" as a type here
    "types": ["cypress", "node"]
